<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:scrollbars="none"
tools:context=".ui.main.SMMainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/z_ic_back"
            app:title="APP SIMASTEKOM MAHASISWA" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_class"
        android:layout_margin="24dp"
        style="@style/CustomButtonCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingHorizontal="16dp"
            android:background="@drawable/background_gradient">

            <ImageView
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_margin="8dp"
                app:tint="?attr/colorPrimary"
                android:layout_height="match_parent"
                android:src="@drawable/z_ic_class" />

            <TextView
                android:layout_weight="1"
                android:textSize="24dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_classes" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_important_contact"
        android:layout_margin="24dp"
        style="@style/CustomButtonCardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingHorizontal="16dp"
            android:background="@drawable/background_gradient">

            <ImageView
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_margin="8dp"
                app:tint="?attr/colorPrimary"
                android:layout_height="match_parent"
                android:src="@drawable/z_ic_phone" />

            <TextView
                android:layout_weight="1"
                android:textSize="24dp"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_important_contact" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

</ScrollView>