<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom - Rounded Style  -->
    <style name="rounded">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="rounded.circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded.custom">
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">5%</item>
        <item name="cornerSizeTopLeft">5%</item>
        <item name="cornerSizeTopRight">20%</item>
    </style>

    <style name="rounded.custom5">
        <item name="cornerSize">5%</item>
    </style>

    <style name="rounded.custom8">
        <item name="cornerSize">8%</item>
    </style>

    <style name="rounded.custom14">
        <item name="cornerSize">14%</item>
    </style>

    <style name="rounded.custom20">
        <item name="cornerSize">20%</item>
    </style>


    <!-- Custom - Navigation Drawer - Divider  -->
    <style name="Widget.App.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.NavigationView" parent="">
        <item name="colorOutline">@color/md_theme_outlineVariant</item>
    </style>

    <!-- Custom - Toolbar   -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>


    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="colorControlNormal">?attr/colorOnSurface</item>
        <item name="colorPrimary">?attr/colorSurface</item>
    </style>


    <!-- Custom - Table Layout -->
    <style name="content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="content_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="content_wrap.text_size">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="content_wrap.text_size.column_name">
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="content_wrap.text_size.column_data">
        <item name="android:layout_weight">1</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <!-- Custom - Value   -->
    <style name="content.value">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="content_wrap.value">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textIsSelectable">true</item>
    </style>


