    <!-- Custom - ExposedDropDown  -->
    <style name="Widget.App.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!--        <item name="colorSurfaceContainerHighest">@color/md_theme_error</item>-->
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.App.ExposedDropdownMenu" parent="">


    </style>

    <!-- Custom - MaterialTextView Button-->
    <style name="content.MaterialTextView_Dialog">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableEndCompat">@drawable/z_ic_pop_up</item>
    </style>

    <style name="content.MaterialTextView_Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="drawableEndCompat">@drawable/z_ic_next</item>
    </style>

    <!-- Textview    -->
    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>


    <!-- Custom - Button   -->
    <style name="CustomButtonCardView" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="CustomButtonTonalMenu" parent="Widget.Material3.Button.TonalButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="cornerRadius">10dp</item>
    </style>


    <style name="CustomButtonFilledMenu" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="cornerRadius">10dp</item>
    </style>


    <style name="CustomButtonTextButtonMore" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:layout_marginTop">-16dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="CustomButtonTextButtonError" parent="Widget.Material3.Button.TextButton">
        <item name="rippleColor">@color/md_theme_error_transparent_0_1</item>
    </style>

    <style name="Widget.Theme.Simastekom.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


</resources>