<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_label_id_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/text_label_id_card_number"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_id_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="No KTP" />

    <TextView
        android:id="@+id/tv_label_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/text_label_gender"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Jenis Kelamin" />


    <TextView
        android:id="@+id/tv_label_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/text_address"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Alamat" />

    <TextView
        android:id="@+id/tv_label_place_date_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/text_place_date_birth"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_place_date_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Tempat Tanggal Lahir" />


    <TextView
        android:id="@+id/tv_label_religion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/text_label_religion"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_religion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Agama" />

    <TextView
        android:id="@+id/tv_label_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/text_label_email"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="@string/text_label_email" />

    <TextView
        android:id="@+id/tv_label_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/text_label_phone"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="4dp"
        android:paddingVertical="2dp"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="@string/text_label_phone" />

</LinearLayout>