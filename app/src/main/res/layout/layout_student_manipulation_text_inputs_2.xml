<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_batch"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="@string/text_label_batch"
        app:expandedHintEnabled="false"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_batch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_hint_batch"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_class_session"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="@string/text_label_class_session"
        app:endIconDrawable="@drawable/z_ic_pop_up"
        app:endIconMode="custom"
        app:expandedHintEnabled="false"
        app:layout_constraintEnd_toEndOf="@id/input_layout_gender"
        app:layout_constraintStart_toStartOf="@id/input_layout_gender"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_gender">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_class_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/text_hint_class_session"
            android:inputType="none" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_semester"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="@string/text_label_semester"
        app:endIconDrawable="@drawable/z_ic_pop_up"
        app:endIconMode="custom"
        app:expandedHintEnabled="false"
        app:layout_constraintEnd_toEndOf="@id/input_layout_gender"
        app:layout_constraintStart_toStartOf="@id/input_layout_gender"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_gender">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/text_hint_choose_semester"
            android:inputType="none" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_lecture_method"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="@string/text_label_lecture_method"
        app:endIconDrawable="@drawable/z_ic_pop_up"
        app:endIconMode="custom"
        app:expandedHintEnabled="false"
        app:layout_constraintEnd_toEndOf="@id/input_layout_gender"
        app:layout_constraintStart_toStartOf="@id/input_layout_gender"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_gender">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_lecture_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/text_hint_choose_lecture_method"
            android:inputType="none" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_student_status"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="@string/text_label_student_status"
        app:endIconDrawable="@drawable/z_ic_pop_up"
        app:endIconMode="custom"
        app:expandedHintEnabled="false"
        app:layout_constraintEnd_toEndOf="@id/input_layout_gender"
        app:layout_constraintStart_toStartOf="@id/input_layout_gender"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_gender">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_student_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/text_hint_choose_student_status"
            android:inputType="none" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_employment_status"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="@string/text_label_employment_status"
        app:endIconDrawable="@drawable/z_ic_pop_up"
        app:endIconMode="custom"
        app:expandedHintEnabled="false"
        app:layout_constraintEnd_toEndOf="@id/input_layout_gender"
        app:layout_constraintStart_toStartOf="@id/input_layout_gender"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_gender">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_employment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/text_hint_choose_employment_status"
            android:inputType="none" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_campus"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="@string/text_label_campus"
        app:endIconDrawable="@drawable/z_ic_pop_up"
        app:endIconMode="custom"
        app:expandedHintEnabled="false"
        app:layout_constraintEnd_toEndOf="@id/input_layout_gender"
        app:layout_constraintStart_toStartOf="@id/input_layout_gender"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_gender">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_campus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/text_hint_choose_campus"
            android:inputType="none" />


    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btn_save"
        style="@style/Widget.Material3.Button.IconButton.Filled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/z_ic_save"
        android:text="@string/btn_text_save"
        android:textSize="16sp" />



    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="32dp"
        app:dividerColor="?attr/colorSurfaceContainerHigh"
        app:layout_constraintEnd_toEndOf="@+id/btn_save"
        app:layout_constraintStart_toStartOf="@+id/btn_save"
        app:layout_constraintTop_toBottomOf="@+id/btn_save" />


    <LinearLayout
        android:id="@+id/layout_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/div1"
        app:layout_constraintStart_toStartOf="@+id/div1"
        app:layout_constraintTop_toBottomOf="@+id/div1">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_profile_picture"
            style="@style/content.MaterialTextView_Button"
            android:text="@string/profile_photo"/>

        <com.google.android.material.divider.MaterialDivider
            style="@style/content"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_identity_personal"
            style="@style/content.MaterialTextView_Button"
            android:text="@string/text_identity_personal"/>

        <com.google.android.material.divider.MaterialDivider
            style="@style/content"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/btn_identity_parent"
            style="@style/content.MaterialTextView_Button"
            android:text="@string/text_identity_parent"/>

        <com.google.android.material.divider.MaterialDivider
            style="@style/content"/>

    </LinearLayout>



</LinearLayout>
